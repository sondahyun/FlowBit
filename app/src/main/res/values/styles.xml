<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomBottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconSize">35dp</item>
        <item name="itemTextAppearanceActive">@style/CustomTextStyle</item>
        <item name="itemTextAppearanceInactive">@style/CustomTextStyle</item>
    </style>

    <style name="CustomTextStyle" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="NumberPadButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:padding">16dp</item>
    </style>
</resources>