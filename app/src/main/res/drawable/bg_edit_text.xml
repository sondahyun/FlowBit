<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 배경 색상 -->
    <solid android:color="#F3F4F6"/>  <!-- 연한 회색 -->

    <!-- 둥근 모서리 -->
    <corners android:radius="12dp"/>

    <!-- 테두리 -->
    <stroke android:width="1dp" android:color="#D1D5DB"/>  <!-- 중간 회색 -->

    <!-- 내부 패딩 -->
    <padding
        android:left="16dp"
        android:right="16dp"
        android:top="8dp"
        android:bottom="8dp"/>
</shape>