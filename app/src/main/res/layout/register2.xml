<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- 뒤로가기 버튼 -->
    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@null"
        android:src="@drawable/baseline_keyboard_arrow_left_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <!-- 타이틀 -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textColor="#1E293B"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp" />

    <!-- 단계 표시 -->
    <TextView
        android:id="@+id/tv_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2/2"
        android:textColor="#64748B"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="@id/tv_title"
        app:layout_constraintEnd_toEndOf="@id/tv_title"
        android:layout_marginTop="8dp" />

    <!-- 새 비밀번호 입력 -->
    <EditText
        android:id="@+id/et_new_password"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="새 비밀번호 입력"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:backgroundTint="#BDBDBD"
        android:inputType="textPassword"
        android:textColor="#1E293B"
        android:textColorHint="#94A3B8"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tv_step"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp" />

    <!-- 새 비밀번호 조건 설명 -->
    <TextView
        android:id="@+id/tv_password_hint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/_8_1"
        android:textColor="#94A3B8"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/et_new_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="4dp" />

    <!-- 비밀번호 확인 -->
    <EditText
        android:id="@+id/et_confirm_password"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:hint="비밀번호 확인"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:backgroundTint="#BDBDBD"
        android:inputType="textPassword"
        android:textColor="#1E293B"
        android:textColorHint="#94A3B8"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tv_password_hint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp" />

    <!-- 완료 버튼 -->
    <Button
        android:id="@+id/btn_complete"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:backgroundTint="#E5E7EB"
        android:enabled="false"
        android:text="입력 완료"
        android:textColor="#94A3B8"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>